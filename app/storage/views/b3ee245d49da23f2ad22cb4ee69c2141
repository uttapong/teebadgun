function showBadge(id,name,desc){

  var content="<div class='userbadge'>"+
  "<img src='<?php echo route('home'); ?>assets/images/badge/"+id+".png' />"+
  "<h2>ขอแสดงความยินดีคุณได้รับเหรียญ '"+name+"'</h2>"+
  "<p>"+desc+"</p>"+
  "</div>";
  bootbox.alert(content, function() {
  });
}


    </script>
